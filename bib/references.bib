@incollection{loya_bahamas_2019,
	address = {Cham},
	title = {The {Bahamas} and {Cayman} {Islands}},
	volume = {12},
	isbn = {978-3-319-92734-3 978-3-319-92735-0},
	url = {http://link.springer.com/10.1007/978-3-319-92735-0_3},
	language = {en},
	urldate = {2024-01-12},
	booktitle = {Mesophotic {Coral} {Ecosystems}},
	publisher = {Springer International Publishing},
	author = {Slattery, Marc and Lesser, Michael P.},
	editor = {Loya, Yossi and Puglise, Kimberly A. and Bridge, Tom C.L.},
	year = {2019},
	doi = {10.1007/978-3-319-92735-0_3},
	note = {Series Title: Coral Reefs of the World},
	pages = {47--56},
	annote = {Algae and coral diversity is significantly reduced relative to nearby shallow reefs (Liddell et al. 1997; Aponte and Ballantine 2001; but see Ballantine et al. 2016), while sponge diversity is quite high on mesophotic reefs and can exceed that of shallow reef counterparts (Liddell et al. 1997; Reed and Pomponi 1997; Slattery and Lesser 2012; Pomponi et al. 2019). Other groups that vary across these shallow to mesophotic depth gradients include molluscs (Dowgiallo 2004), foraminiferans (Richardson-White and Walker 2011), fishes (Lesser and Slattery 2011; Slattery et al. 2016), and the associated microbes from these groups (Olson and Kellogg 2010).
},
	annote = {Climate change impacts including thermal stress and extreme storm event damage have been recorded on mesophotic reefs in Australia (Bongaerts et al. 2013), the Bahamas (Lang et al. 1988), Puerto Rico (Bunkley-Williams et al. 1991), and the USVI (Smith et al. 2016a, b). In addition, the indirect effects of storm waves (i.e., sedimentation and debris slides) have occurred in several mesophotic communities (Harmelin-Vivien and Laboute 1986; Liddell and Avery 2000; Bak et al. 2005; Appeldoorn et al. 2016). Diseases of shallow coral reefs have been reported with increasing frequency (Ruiz-Morenol et al. 2012), and there is some evidence that upper mesophotic reefs can be susceptible to disease (Smith et al. 2010). Likewise, anthropogenic nutrients and toxins have been reported on mesophotic reefs (Lapointe 1997; Etnoyer et al. 2016), and that could result in significant increases in algae (McCook 1999) resulting in competition with corals and sponges at depth (Slattery and Lesser 2014). Finally, over the last decade, the invasive lionfishes, Pterois volitans and P. miles, have been reported on mesophotic reefs throughout the Caribbean Basin (Andradi-Brown et al. 2017). In the Bahamas, lionfish have been shown to significantly decrease endemic fish populations resulting in reduced herbivory and increased algal competition with corals and sponges causing a trophic cascade and phase shift in the benthic community structure (Lesser and Slattery 2011).
},
	annote = {Co-occurring with these transitions in the community are important changes in nutrients and plankton that are often influenced by episodic oceanographic processes such as internal waves (Leichter et al. 1996, 2003; Leichter and Genovese 2006). Lesser (2006) demonstrated that Agelas conifera, Aplysina fistularis, and Callyspongia vaginalis in the Bahamas exhibited increased feeding, growth, and biomass, with increasing depth (where particulate food supply increased), suggesting that bottom-up processes are largely responsible for the abundance of sponges on MCEs. This study offered comparable research from Belize and the Florida Keys to demonstrate the broad applicability of these results. Lesser and Slattery (2013) provided further evidence that the observed growth rates at mesophotic depths occurred in the presence of a predator community that was similar to that of shallow coral reefs suggesting that predation processes are not the only control on sponge communities in the Caribbean (Pawlik et al. 2013, 2015; Slattery and Lesser 2015)


},
}

